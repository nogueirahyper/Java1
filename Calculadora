    private void textNum2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
    }                                        

    private void btnSomarActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        System.out.println("Bom dia");
        int a, b,soma;
        a = Integer. parseInt(textNum1.getText());
        b = Integer. parseInt(textNum2.getText());
        soma = a + b;
        lblResultado.setText (Integer.toString(soma));
    }                                        

    private void btnMultActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        int a, b,multi;
        a = Integer. parseInt(textNum1.getText());
        b = Integer. parseInt(textNum2.getText());
        multi = a * b;
        lblResultado.setText (Integer.toString(multi));
    }                                       

    private void btnDivActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        double a, b,div;
        a = Double. parseDouble(textNum1.getText());
        b = Double. parseDouble(textNum2.getText());
        div = a / b;
        lblResultado.setText (Double.toString(div));
    }                                      

    private void btnSubActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        int a, b,sub;
        a = Integer. parseInt(textNum1.getText());
        b = Integer. parseInt(textNum2.getText());
        sub = a - b;
        lblResultado.setText (Integer.toString(sub));
    }                                      

